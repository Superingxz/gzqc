<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/item_carowner_shape"
    android:layout_height="130dp">


  <ImageView
      android:visibility="gone"
      android:id="@+id/owner_info_img"
      android:layout_centerInParent="true"
      android:layout_alignParentLeft="true"
      android:layout_margin="10dp"
      android:layout_width="70dp"
      android:background="@mipmap/bmw"
      android:layout_height="70dp" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/owner_info_img"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:textColor="#585858"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名："
            />

        <TextView
            android:textSize="15dp"
            android:id="@+id/owner_name"
            android:textColor="#585858"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            />
    </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话："
                />

            <TextView
                android:textSize="15dp"
                android:id="@+id/owner_number"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>





        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号："
                />

            <TextView
                android:textSize="15dp"
                android:id="@+id/carno"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障描述："
                />

            <TextView
                android:textSize="15dp"
                android:id="@+id/fault_des"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间;"
                />

            <TextView
                android:textSize="15dp"
                android:id="@+id/subscribe_time"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计划来厂时间:"
                />

            <TextView
                android:textSize="15dp"
                android:id="@+id/plan_time"
                android:textColor="#585858"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>