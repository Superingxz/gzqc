<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    tools:context="com.xolo.gzqc.ui.activity.consumers.EditAddressActivity">

    <com.xolo.gzqc.ui.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mtitle="添加地址"
        />

    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:leftTitle="收货人"
        app:leftwith="60"
        />
    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTitle="联系电话"
        app:leftwith="60"
        />
    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_postal_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTitle="邮编"
        app:leftwith="60"
        />
    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTitle="省份"
        app:showArrow="true"
        app:leftwith="60"
        />
    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTitle="城市"
        app:showArrow="true"
        app:leftwith="60"
        />
    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTitle="区县"
        app:showArrow="true"
        app:leftwith="60"
        />
    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftTitle="详细地址"
        app:leftwith="60"
        />

    <Button
        android:id="@+id/btn_commit"
        style="@style/btn1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:text="添加"
        />
</LinearLayout>
