<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/img_login"
    android:gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_invitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/erweima"
        android:padding="5dp"
        android:text="邀请朋友也下载安装"
        android:gravity="center_vertical|right"
        android:drawablePadding="10dp"
        android:textColor="#555"
        android:textSize="12sp"
        />

    <com.xolo.gzqc.ui.view.RoundImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/logo"
        />

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_white_bg"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:maxLength="11"
            android:hint="手机号码"
            android:textColorHint="@color/gray"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:inputType="number"
            android:drawablePadding="3dp"
            android:textSize="14sp"/>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#d7d7d7" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:ems="10"
            android:hint="密码"
            android:textColorHint="@color/gray"
            android:inputType="textPassword"
            android:textColor="@color/gray"
            android:drawablePadding="3dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
       >

        <CheckBox
            android:id="@+id/cb_remenber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="@color/white"
            android:textSize="15sp"
            />

        <CheckBox
            android:id="@+id/cb_autologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:text="自动登陆"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:textColor="@color/gray"
            android:text="注册" />

        <Button
            android:layout_marginLeft="30dp"
            android:minWidth="120dp"
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_white"
            android:gravity="center"
            android:textColor="@color/Blue2"
            android:layout_toRightOf="@id/btn_register"
            android:text="登录" />

    </RelativeLayout>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:textColor="#555"
        android:text="当前版本1.0.0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textColor="#555"
        android:text="广州西山晴雪文化传播有限公司   版权所有"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/loss_passWord"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="忘记密码"
            android:layout_alignParentRight="true"
            android:textColor="#555"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:gravity="center"
            />

    </RelativeLayout>

</LinearLayout>
