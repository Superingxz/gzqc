<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xolo.gzqc.ui.fragment.HomePickFragment">

    <com.xolo.gzqc.ui.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mtitle="顺达汽车维修厂"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/DarkBlue"
        >

        <LinearLayout
            android:id="@+id/btn_offer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/offer_histrory"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史报价"
                android:textSize="14sp"
                android:textColor="#E4C851"
                />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/btn_purchase"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/purchase_histrory"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史购件"
                android:textSize="14sp"
                android:textColor="#FE9426"
                />

        </LinearLayout>



    </LinearLayout>


    <com.xolo.gzqc.ui.view.TabView
        android:id="@+id/tabview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="4"
        android:background="@color/activity_bg"
        />


</LinearLayout>
