<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.pickcar.BookingDetailsActivity">

<com.xolo.gzqc.ui.view.TitleView
    android:id="@+id/titleview"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:mtitle="预约详细信息"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TableLayout
                style="@style/tablayout1"
                >

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="车牌号"
                        />
                    <TextView
                        android:id="@+id/carno"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="联系人"
                        />
                    <TextView
                        android:id="@+id/name"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="联系人手机"
                        />
                    <TextView
                        android:id="@+id/phone"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                    <Button
                        android:id="@+id/btn_1"
                        style="@style/btn1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="打电话"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="预约日期"
                        />
                    <TextView
                        android:id="@+id/date"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint=""
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="故障描述"
                        />
                    <TextView
                        android:id="@id/description"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="无"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        />
                    <CheckBox
                        android:id="@+id/deal"
                        android:text="已处理"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="预交车时间"
                        />
                    <TextView
                        android:id="@+id/give_time"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="选择时间"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="处理说明:"
                        />
                    <EditText
                        android:id="@+id/remark"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="填写说明"
                        />

                </TableRow>


            </TableLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/btn_2"
                    style="@style/btn3"
                    android:text="查看客户信息"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />

                <Button
                    android:id="@+id/btn_3"
                    style="@style/btn4"
                    android:layout_marginLeft="30dp"
                    android:text="给客户信息"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp" />

            </LinearLayout>


        </LinearLayout>



    </ScrollView>




</LinearLayout>
