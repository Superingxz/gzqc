<?xml version="1.0" encoding="utf-8"?><!--产品基本参数-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/compress_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/goods_name_text"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="产品名称:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/goods_name_text"
                android:background="@drawable/shape_co_listview"
                android:minHeight="30dp"
                android:paddingLeft="5dp"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/goods_standard_text"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="产品规格:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/goods_standard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/goods_standard_text"
                android:background="@drawable/shape_co_listview"
                android:minHeight="30dp"
                android:paddingLeft="5dp"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/goods_unit_text"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="单位:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/goods_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/goods_unit_text"
                android:background="@drawable/shape_co_listview"
                android:minHeight="30dp"
                android:paddingLeft="5dp"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/gooods_type_text"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="产品类别:"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/gooods_type_text"
                android:orientation="horizontal">
                <!--<Spinner-->
                <!--android:id="@+id/spinner1"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->
                <!--<Spinner-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:id="@+id/spinner2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->

                <RelativeLayout
                    android:id="@+id/typ1_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:hint="请选择产品类别"
                        android:id="@+id/typ1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/rt_img" />

                    <ImageView
                        android:id="@+id/rt_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/right_img" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/typ2_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:hint="请选择产品类别"
                        android:id="@+id/typ2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/rt_img2" />
                    <ImageView
                        android:id="@+id/rt_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@mipmap/right_img" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/gooods_price_text"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="零售价:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/goods_price_et"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/gooods_price_text"
                android:background="@drawable/shape_co_listview"
                android:digits="1234567890"
                android:minHeight="30dp"
                android:paddingLeft="5dp"
                android:textSize="14dp" />
            <!--        <CheckBox
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/promotion_text"
                        android:id="@+id/check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/promotion_text"
                        android:layout_alignParentRight="true"
                        android:text="是否促销"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/gooods_describe"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="产品描述:"
                android:textColor="@android:color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/gooods_describe"
                android:background="@drawable/shape_et_bg">

                <EditText
                    android:id="@+id/goods_describe_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="left|center_vertical"
                    android:minHeight="50dp"
                    android:paddingLeft="5dp"
                    android:textSize="14dp" />

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品主图"
                android:textColor="@android:color/black" />

            <com.xolo.gzqc.ui.view.ScrollGridView
                android:id="@+id/gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:horizontalSpacing="10dp"
                android:numColumns="2"
                android:verticalSpacing="10dp" />

        </LinearLayout>


        <Button
            android:id="@+id/submit"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_button_2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="提交"
            android:textColor="@color/blue1" />
    </LinearLayout>
</ScrollView>