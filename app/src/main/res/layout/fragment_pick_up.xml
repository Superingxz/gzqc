<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    tools:context=".ui.activity.pickcar.PickUpCarActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="车牌号:"
                        />
                    <EditText
                        android:id="@+id/carno"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:hint="填写获取对应信息"
                        />

                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="姓名:"
                        />
                    <TextView
                        android:id="@+id/name"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="手机:"
                        />
                    <TextView
                        android:id="@+id/phone"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                </TableRow>


                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="送修人:"
                        />
                    <TextView
                        android:id="@+id/name_send"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="送修人手机:"
                        />
                    <TextView
                        android:id="@+id/phone_send"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                </TableRow>



                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:text="车品牌:"
                        android:gravity="center"
                        android:textColor="@color/text1"
                        />
                    <TextView
                        android:id="@+id/brand"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:text="行驶里程:"
                        style="@style/tv1"
                        />
                    <EditText
                        android:id="@+id/mileage"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:text="油量:"
                        style="@style/tv1"
                        />
                    <TextView
                        style="@style/et1"
                        android:id="@+id/oil"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                    <ImageView
                        android:id="@+id/iv"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/tab_found"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="fitXY"
                        />

                </TableRow>


                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:text="进厂时间:"
                        style="@style/tv1"
                        />
                    <TextView
                        android:id="@+id/in_time"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                </TableRow>


                <TableRow
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:text="预约交车:"
                        style="@style/tv1"
                        />
                    <TextView
                        android:id="@+id/book_time"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        />

                </TableRow>


                <TableRow
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        android:text="车况信息:"
                        style="@style/tv1"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        />

                    <Button
                        android:id="@+id/btn_part"
                        style="@style/btn1"
                        android:layout_height="20dp"
                        android:text="随车附件"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        />

                </TableRow>
            </TableLayout>


            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="vertical"
                android:background="@drawable/shape_et_bg"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="类别"
                        android:textColor="@color/text1"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray2"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="具体描述"
                        android:textColor="@color/text1"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray2"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="照片"
                        android:textColor="@color/text1"
                        />



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray2"
                    />

                <com.xolo.gzqc.ui.view.ScrollListView
                    android:id="@+id/lv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />

            </LinearLayout>


            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="维修描述："
                    android:textColor="@color/text1"
                    />



            </RelativeLayout>

            <EditText
                android:id="@+id/description"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/shape_et_bg"
                />

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <CheckBox
                    android:id="@+id/is_rework"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="属于返修"
                    android:textColor="@color/text1"
                    android:textSize="12sp"
                    />

                <CheckBox
                    android:id="@+id/is_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意拆检"
                    android:textColor="@color/text1"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/activity_bg"
                android:layout_marginTop="10dp"
                >

                <Button
                    android:id="@+id/confirm"
                    style="@style/btn2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="打印"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
