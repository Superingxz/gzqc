<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    tools:context="com.xolo.gzqc.ui.activity.consumers.SubmitOrderActivity">

    <com.xolo.gzqc.ui.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mtitle="订单付款"
        />


    <RelativeLayout
        android:id="@+id/rl_pay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/activity_bg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        >
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="付款"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:background="@android:color/holo_red_light"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text1"
            android:text="数量："
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/tv_total"
            android:layout_below="@id/tv_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="合计："
            />
        <TextView
            android:id="@+id/tv_price"
            android:layout_below="@id/tv_qty"
            android:layout_toRightOf="@id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titleview"
        android:layout_above="@id/rl_pay"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_order_numer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:text="订单号：23456666"
                android:textColor="@color/text1"
                />

            <com.xolo.gzqc.ui.view.ScrollListView
                android:layout_below="@id/titleview"
                android:layout_above="@id/rl_pay"
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                />

            <RelativeLayout
                android:id="@+id/btn_select_location"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tv_consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tv1"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_below="@id/tv_consignee"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/location_good"
                    />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_below="@id/tv_consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址为空，赶紧添加吧!"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="支付方式"
                style="@style/tv1"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                />
            <LinearLayout
                android:id="@+id/btn_zfb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/tv_pay_way"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="支付宝"
                    android:paddingLeft="20dp"
                    style="@style/tv1"
                    />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    />

            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/btn_wx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:text="微信"
                    android:paddingLeft="20dp"
                    style="@style/tv1"
                    />

                <RadioButton
                    android:id="@+id/rb_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </LinearLayout>



    </ScrollView>


</RelativeLayout>
