<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    tools:context=".ui.activity.pickcar.OfferActivity">

    <com.xolo.gzqc.ui.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mtitle="报价"
        />

            <TableLayout
                android:layout_marginBottom="20dp"
                style="@style/tablayout1"
                >

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="车牌号"
                        />
                    <TextView
                        android:id="@+id/carno"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="选择车牌"
                        />

                    <Button
                        android:id="@+id/select"
                        style="@style/btn2"
                        android:layout_height="30dp"
                        android:text="选择"
                        android:layout_marginLeft="10dp"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="型号"
                        />
                    <TextView
                        android:id="@+id/brand"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="选择车牌读取"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="联系人"
                        />
                    <TextView
                        android:id="@+id/name"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="选择车牌读取"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="联系人手机"
                        />
                    <TextView
                        android:id="@+id/phone"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="选择车牌读取"
                        />

                </TableRow>


            </TableLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.xolo.gzqc.ui.view.TabView
                    android:id="@+id/tabview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <ImageView
                    android:id="@+id/btn_add"
                    android:padding="5dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/add"
                    android:layout_alignParentRight="true"
                    />


            </RelativeLayout>







</LinearLayout>
