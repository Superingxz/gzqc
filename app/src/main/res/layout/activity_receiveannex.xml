<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.pickcar.ReceiveannexActivity">

    <com.xolo.gzqc.ui.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mtitle="随车附件"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            >

            <TableLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:padding="10dp"
                >

                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv3"
                        android:text="行驶证"
                        />
                    <CheckBox
                        android:id="@+id/cb_1"
                        android:layout_marginLeft="30dp"
                        android:text="有"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    />
                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv3"
                        android:text="车辆登记证"
                        />
                    <CheckBox
                        android:id="@+id/cb_2"
                        android:layout_marginLeft="30dp"
                        android:text="有"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    />

                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv3"
                        android:text="随车工具"
                        />
                    <CheckBox
                        android:id="@+id/cb_3"
                        android:layout_marginLeft="30dp"
                        android:text="有"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    />
                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv3"
                        android:text="钥匙"
                        />
                    <CheckBox
                        android:id="@+id/cb_4"
                        android:layout_marginLeft="30dp"
                        android:text="有"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    />
                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv3"
                        android:text="备胎"
                        />
                    <CheckBox
                        android:id="@+id/cb_5"
                        android:layout_marginLeft="30dp"
                        android:text="有"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    />
                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv3"
                        android:text="三角牌"
                        />
                    <CheckBox
                        android:id="@+id/cb_6"
                        android:layout_marginLeft="30dp"
                        android:text="有"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    />
                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    >
                    <TextView
                        style="@style/tv3"
                        android:text="灭火器"
                        />
                    <CheckBox
                        android:id="@+id/cb_7"
                        android:layout_marginLeft="30dp"
                        android:text="有"
                        />

                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"
                    />

            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"

                >

                <TextView
                    style="@style/tv3"
                    android:text="其他"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    />
                <EditText
                    android:id="@+id/elseItem"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/sao"
                    android:gravity="top"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_et_bg"
                    />

            </LinearLayout>



                <Button
                    android:id="@+id/confirm"
                    style="@style/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="确定"
                    android:layout_margin="20dp"
                    />


        </LinearLayout>



    </ScrollView>




</LinearLayout>
