<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.AddAppointmentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity_bg"
            android:orientation="vertical">

            <TableLayout
                android:layout_marginTop="20dp"
               style="@style/tablayout1"
                >

                <TableRow
                   style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="车牌号"
                        />
                    <TextView
                        android:id="@+id/carno"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:maxLength="7"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="联系人"
                        />
                    <TextView
                        android:id="@+id/name"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="联系人手机"
                        />
                    <TextView
                        android:id="@+id/phone"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="所有人"
                        />
                    <TextView
                        android:id="@+id/holder"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="所有人手机"
                        />
                    <TextView
                        android:id="@+id/holder_tel"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="配件费"
                        />
                    <TextView
                        android:id="@+id/tv_pay_1"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>
                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="工时费"
                        />
                    <TextView
                        android:id="@+id/tv_pay_2"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>
                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="总金额"
                        />
                    <TextView
                        android:id="@+id/tv_pay_3"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>


                <RadioGroup
                    style="@style/tab_row"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/rb_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="折扣比例"
                        />
                    <EditText
                        android:id="@+id/ration"
                        style="@style/et1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_height="30dp"
                        android:inputType="number"
                        android:text="100"
                        />
                    <RadioButton
                        android:id="@+id/rb_2"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠金额"
                        />
                    <EditText
                        android:id="@+id/lessmoney"
                        android:layout_marginLeft="10dp"
                        style="@style/et1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:inputType="number"
                        android:text="0"
                        />

                </RadioGroup>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="实际金额"
                        />
                    <EditText
                        android:id="@+id/tv_pay_4"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="换算获取"
                        android:inputType="number"
                        />
d

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="税点"
                        />
                    <EditText
                        android:id="@+id/tax_point"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="3"
                        android:hint="填写税点"
                        />
                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="税金"
                        android:layout_width="wrap_content"
                        />
                    <TextView
                        android:id="@+id/taxes"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="换算获取"
                        android:text="0"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="应付金额"
                        />
                    <EditText
                        android:id="@+id/tv_pay_5"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="换算获取"
                        />

                    <Button
                        android:id="@+id/btn_count"
                        style="@style/btn2"
                        android:layout_height="30dp"
                        android:text="计算"
                        android:layout_marginLeft="10dp"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="提车人姓名"
                        />
                    <EditText
                        android:id="@+id/receive_name"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="填写提车人姓名"
                        />
                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="提车人手机"
                        />
                    <EditText
                        android:id="@+id/receive_phone"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="填写提车人手机"
                        />
                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="备注"
                        />
                    <EditText
                        android:id="@+id/et_remark"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="填写备注"
                        />
                </TableRow>

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <CheckBox
                        android:id="@+id/cb_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开发票"
                        android:textColor="@color/text1"
                        android:textSize="12sp"
                        />

                    <CheckBox
                        android:id="@+id/cb_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未结算"
                        android:textColor="@color/text1"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        />

                    <CheckBox
                        android:id="@+id/cb_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="打印"
                        android:textColor="@color/text1"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>

            </TableLayout>

                <Button
                    android:id="@+id/btn_pay"
                    style="@style/btn2"
                    android:text="结算"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="30dp"
                    />

        </LinearLayout>



    </ScrollView>


</LinearLayout>
