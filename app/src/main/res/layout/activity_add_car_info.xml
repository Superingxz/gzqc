<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.pickcar.AddCarInfoActivity">


    <com.xolo.gzqc.ui.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mtitle="添加车辆"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TableLayout
                style="@style/tablayout1"
                >

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/title_mandatory"
                        android:text="车牌号"
                        />
                    <EditText
                        android:id="@+id/car_nunber"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="输入车牌"
                        />

                    <Button
                        android:id="@+id/btn_scan"
                        style="@style/btn2"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="扫描"
                        />


                </TableRow>

                <TableRow
                    android:visibility="gone"
                    android:id="@+id/tr_old"
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="曾用车牌"
                        />
                    <TextView
                        android:id="@+id/old_carno"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />
                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="二维码"
                        />
                    <TextView
                        android:id="@+id/qr_code"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/title_mandatory"
                        android:text="品牌"
                        />
                    <EditText
                        android:id="@+id/brand"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="长按可手动输入"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_code"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        />


                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="车型"
                        />
                    <EditText
                        android:id="@+id/models"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="长按可手动输入"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="排量"
                        />
                    <TextView
                        android:id="@+id/displacement"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="选择排量"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="年份"
                        />
                    <TextView
                        android:id="@+id/year"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:maxLength="4"
                        android:hint="选择年份"
                        />
                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="驱动"
                        />
                    <TextView
                        android:id="@+id/drive"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="选择驱动"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="燃料"
                        />
                    <TextView
                        android:id="@+id/fuel"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="选择燃料"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="操控"
                        />
                    <TextView
                        android:id="@+id/operation"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="选择操作"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                >

                <TextView
                    style="@style/tv1"
                    android:text="VIN码"
                    />
                <EditText
                    android:id="@+id/vin_code"
                    style="@style/et1"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:maxLength="17"
                    android:hint="输入VIN码"
                    />

            </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="发动机号"
                        />
                    <EditText
                        android:id="@+id/engine"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:maxLength="17"
                        android:hint="输入发动机号"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="注册日期"
                        />
                    <TextView
                        android:id="@+id/login_data"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="选择注册日期"
                        />

                </TableRow>

            </TableLayout>

                <Button
                    android:id="@+id/btn_determine"
                    style="@style/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="30dp"
                    android:text="确定"
                    />

        </LinearLayout>



    </ScrollView>

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:paddingTop="8dp"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="true"
            android:background="#F0EFF4"
            android:keyBackground="@android:color/white"
            android:keyTextColor="#5E5E5E"
            android:shadowColor="#ffffff"
            android:keyPreviewLayout="@layout/key_preview_layout"
            android:shadowRadius="0.0"
            android:keyTextSize="18sp"
            android:labelTextSize="18sp"
            android:visibility="gone"
            />

    </RelativeLayout>
</LinearLayout>
