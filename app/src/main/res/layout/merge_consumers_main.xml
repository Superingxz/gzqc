<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context="com.xolo.gzqc.ui.fragment.consumers.ConsumersMainFragment">


      <com.xolo.gzqc.ui.view.ShufflingViewPager
          android:id="@+id/shuffViewPager"
          android:layout_width="match_parent"
          android:layout_height="180dp"
          android:background="@color/white"
          />

      <LinearLayout
          android:layout_below="@id/shuffViewPager"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          android:background="@color/white"
          >
         <LinearLayout
             android:id="@+id/ll_car_accessory"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical"
             android:padding="5dp"
             >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/car_accessory"
                />
            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汽车用品"
                android:textSize="12sp"
                android:textColor="@color/text1"
                />
         </LinearLayout>
         <LinearLayout
             android:id="@+id/ll_second_hand_car"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical"
             android:padding="5dp"
             >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/second_hand_car"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二手车"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/text1"
                />
         </LinearLayout>
         <LinearLayout
             android:id="@+id/ll_special_goods"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical"
             android:padding="5dp"
             >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/special_goods"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特色商品"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/text1"
                />
         </LinearLayout>
         <LinearLayout
             android:id="@+id/ll_else"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:orientation="vertical"
             android:padding="5dp"
             >
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/consumer_else"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="其他"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textColor="@color/text1"

                />
         </LinearLayout>

      </LinearLayout>




</RelativeLayout>
