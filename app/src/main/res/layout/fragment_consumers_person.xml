<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xolo.gzqc.ui.fragment.consumers.ConsumersPersonFragment">

    <com.xolo.gzqc.ui.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mtitle="个人中心"
        />

    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:isEdit="false"
        app:leftTitle="姓名"
        app:leftwith="60"
        />
    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isEdit="false"
        app:leftTitle="性别"
        app:leftwith="60"
        />
    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isEdit="false"
        app:leftTitle="手机号"
        app:showBlow="true"
        app:leftwith="60"
        />

    <com.xolo.gzqc.ui.view.ExEditText
        android:id="@+id/eet_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:leftTitle="收货地址"
        app:showBlow="true"
        app:showArrow="true"
        app:leftwith="60"
        />

</LinearLayout>
