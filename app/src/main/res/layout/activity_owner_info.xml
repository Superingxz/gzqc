<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg"
    tools:context=".ui.activity.pickcar.OwnerInfoActivity">

    <com.xolo.gzqc.ui.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mtitle="车主基本资料"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingBottom="20dp"
            >

            <TableLayout
                style="@style/tablayout1"
                >

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/title_mandatory"
                        android:text="联系人"
                        />
                    <com.xolo.gzqc.ui.view.ClearWriteEditText
                        android:id="@+id/name"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="请输入姓名"
                        />

                    <Button
                        android:id="@+id/requery"
                        style="@style/btn2"
                        android:layout_height="30dp"
                        android:text="查询"
                        android:layout_marginLeft="5dp"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/title_mandatory"
                        android:text="性 别"
                        />

                    <RadioGroup
                        android:orientation="horizontal"
                        >

                        <RadioButton
                            android:id="@+id/rb_boy"
                            android:textColor="@color/gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            />



                        <RadioButton
                            android:id="@+id/rb_gird"
                            android:textColor="@color/gray"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="女"
                            />

                    </RadioGroup>
                </TableRow>

                <TableRow
                    style="@style/tab_row"
                >
                <TextView
                    style="@style/title_mandatory"
                    android:text="联系人手机"
                    />
                <EditText
                    android:id="@+id/phone_1"
                    style="@style/et1"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:hint="手机号1"
                    android:maxLength="11"
                    android:inputType="number"
                    />

            </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        />
                    <EditText
                        android:id="@+id/phone_2"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="手机号2"
                        android:maxLength="11"
                        android:inputType="number"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="驾驶证号"
                        />
                    <EditText
                        android:id="@+id/drivingno"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="填写驾驶证"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/title_mandatory"
                        android:text="地 址"
                        />
                    <TextView
                        android:id="@+id/province"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="选择省"
                        />

                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        />

                    <TextView
                        android:id="@+id/city"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="选择市"
                        />

                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/title_mandatory"
                        android:text="区 县"
                        />
                    <TextView
                        android:id="@+id/county"
                        style="@style/tv2"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:hint="选择区县"
                        />uprf


                </TableRow>


                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="街 道"
                        />
                    <EditText
                        android:id="@+id/street"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="填写街道"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="所有人"
                        />
                    <EditText
                        android:id="@+id/link_name"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="填写车辆所有人"
                        />

                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="联系电话"
                        />
                    <EditText
                        android:id="@+id/link_phone"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="11"
                        android:hint="填写联系电话"
                        />
                </TableRow>

                <TableRow
                    style="@style/tab_row"
                    >
                    <TextView
                        style="@style/tv1"
                        android:text="备注"
                        />
                    <EditText
                        android:id="@+id/note"
                        style="@style/et1"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="填写备注"
                        />

                </TableRow>

            </TableLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <TextView
                    style="@style/tv1"
                    android:text="车辆列表:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:id="@+id/btn_add"
                    android:background="@mipmap/add"
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:orientation="vertical"
                android:background="@drawable/shape_et_bg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="车牌号"
                        android:textColor="@color/text1"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray2"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="车型"
                        android:textColor="@color/text1"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray2"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="二维码"
                        android:textColor="@color/text1"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray2"
                    />

                <com.xolo.gzqc.ui.view.ScrollListView
                    android:id="@+id/lv_car"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    />

            </LinearLayout>

                <Button
                    android:id="@+id/btn_save"
                    style="@style/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    android:text="保存"
                    />

        </LinearLayout>



    </ScrollView>

</LinearLayout>
