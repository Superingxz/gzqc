<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.xolo.gzqc.ui.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:mtitle="修改密码"
        />
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:gravity="right"
            android:id="@+id/maintain_text1"
            android:layout_alignParentLeft="true"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text1"
            android:layout_centerInParent="true"
            android:text="新密码："
            />

        <RelativeLayout
            android:layout_margin="10dp"
            android:background="@drawable/shape_et_bg"
            android:layout_toRightOf="@+id/maintain_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:textSize="14dp"
                android:id="@+id/maintain_et"
                android:layout_toLeftOf="@+id/maintain_img1"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:gravity="right"
            android:id="@+id/maintain_text2"
            android:layout_alignParentLeft="true"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text1"
            android:layout_centerInParent="true"
            android:text="确认密码："
            />

        <RelativeLayout
            android:layout_margin="10dp"
            android:background="@drawable/shape_et_bg"
            android:layout_toRightOf="@+id/maintain_text2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:maxLength="6"
                android:paddingLeft="5dp"
                android:textSize="14dp"
                android:id="@+id/maintain_et1"
                android:layout_toLeftOf="@+id/maintain_img1"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="match_parent" />


        </RelativeLayout>

    </RelativeLayout>
    <Button
        android:text="提交"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_button"
        android:layout_gravity="center_horizontal"
        android:layout_width="130dp"
        android:id="@+id/submit"
        android:layout_height="40dp" />
</LinearLayout>